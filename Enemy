using UnityEngine;

public class Enemy : MonoBehaviour
{
    public float moveSpeed = 2f;
    public float detectionRange = 3f;
    public int maxHealth = 3; // Vida m√°xima del enemigo
    private int currentHealth;

    private Transform player;
    private Rigidbody2D rb;
    private bool isPlayerInRange = false;

    void Start()
    {
        player = GameObject.FindGameObjectWithTag("Player")?.transform;
        rb = GetComponent<Rigidbody2D>();

        // Hace que el enemigo no sea afectado por la f√≠sica
        rb.bodyType = RigidbodyType2D.Kinematic;

        // Inicializa la vida del enemigo
        currentHealth = maxHealth;
    }

    void Update()
    {
        if (player == null) return;

        float distance = Vector2.Distance(transform.position, player.position);
        isPlayerInRange = (distance < detectionRange);

        if (isPlayerInRange)
        {
            Vector2 direction = (player.position - transform.position).normalized;
            rb.linearVelocity = direction * moveSpeed; // Se mueve hacia el jugador
        }
        else
        {
            rb.linearVelocity = Vector2.zero; // Se detiene cuando el jugador est√° fuera del rango
        }
    }

    // M√©todo para recibir da√±o
    public void TakeDamage(int damage)
    {
        currentHealth -= damage;
        Debug.Log("‚öîÔ∏è Enemigo recibi√≥ da√±o. Vida restante: " + currentHealth);

        if (currentHealth <= 0)
        {
            Die();
        }
    }

    // M√©todo para destruir al enemigo cuando su vida llegue a 0
    void Die()
    {
        Debug.Log("üíÄ Enemigo eliminado");
        Destroy(gameObject);
    }

    void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.CompareTag("Player"))
        {
            Debug.Log("üí• El jugador colision√≥ con el enemigo");
            // Llamar al m√©todo TakeDamage del enemigo al colisionar con el jugador
            TakeDamage(1); // Cambia el valor "1" por el da√±o que deseas infligir
        }
    }
}
